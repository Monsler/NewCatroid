<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <CheckBox android:id="@+id/brick_checkbox"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:visibility="gone" />

    <org.catrobat.catroid.ui.BrickLayout
        android:id="@+id/brick_create_point_joint_layout"
        style="@style/BrickContainer.Threed.Big">

        <include layout="@layout/icon_brick_category_threed" />

        <TextView style="@style/BrickText.SingleLine" android:text="@string/brick_create_point_joint" />

        <TextView style="@style/BrickText.SingleLine" android:text="@string/brick_joint_name" app:layout_newLine="true"/>
        <TextView android:id="@+id/brick_joint_name_edit" style="@style/BrickEditText" />

        <TextView style="@style/BrickText.SingleLine" android:text="@string/brick_joint_object_a" app:layout_newLine="true"/>
        <TextView android:id="@+id/brick_joint_object_a_edit" style="@style/BrickEditText" />

        <TextView style="@style/BrickText.SingleLine" android:text="@string/brick_joint_pivot_a" app:layout_newLine="true"/>
        <TextView android:id="@+id/brick_joint_pivot_a_x" style="@style/BrickEditText" />
        <TextView android:id="@+id/brick_joint_pivot_a_y" style="@style/BrickEditText" />
        <TextView android:id="@+id/brick_joint_pivot_a_z" style="@style/BrickEditText" />

        <TextView style="@style/BrickText.SingleLine" android:text="@string/brick_joint_object_b" app:layout_newLine="true"/>
        <TextView android:id="@+id/brick_joint_object_b_edit" style="@style/BrickEditText" />

        <TextView style="@style/BrickText.SingleLine" android:text="@string/brick_joint_pivot_b" app:layout_newLine="true"/>
        <TextView android:id="@+id/brick_joint_pivot_b_x" style="@style/BrickEditText" />
        <TextView android:id="@+id/brick_joint_pivot_b_y" style="@style/BrickEditText" />
        <TextView android:id="@+id/brick_joint_pivot_b_z" style="@style/BrickEditText" />

    </org.catrobat.catroid.ui.BrickLayout>
</LinearLayout>